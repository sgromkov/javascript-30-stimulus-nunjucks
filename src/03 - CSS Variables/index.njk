{% set title = 'Scoped CSS Variables and JS' %}
{% extends '../layout.njk' %}

{% block styles %}
    <link rel="stylesheet" href="index.css">
{% endblock %}

{% block content %}

    <div data-controller="css-variables">

        <h2>Update CSS Variables with <span class='hl'>JS</span></h2>

        <div class="controls">
            <label for="spacing">Spacing:</label>
            <input id="spacing" type="range" name="spacing" min="10" max="200" value="10"
                data-target="css-variables.input"
                data-action="change->css-variables#handleUpdate mousemove->css-variables#handleUpdate"
                data-css-variables-sizing="px"
            >

            <label for="blur">Blur:</label>
            <input id="blur" type="range" name="blur" min="0" max="25" value="10"
                data-target="css-variables.input"
                data-action="change->css-variables#handleUpdate mousemove->css-variables#handleUpdate"
                data-css-variables-sizing="px"
            >

            <label for="base">Base Color</label>
            <input id="base" type="color" name="base" value="#ffc600"
                data-target="css-variables.input"
                data-action="change->css-variables#handleUpdate mousemove->css-variables#handleUpdate"
            >
        </div>

        <img src="images/image.jpg">

    </div>

{% endblock %}

{% block scripts %}
    <script src="index.js"></script>
{% endblock %}